{
  "name": "@o-sca/nodestrap",
  "version": "1.1.0",
  "description": "bootstrap javascript/typescript project template generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/o-sca/nodestrap.git"
  },
  "keywords": [],
  "author": "Oscar Yang Guang Zhu <ozhu35@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "bin": {
    "nodestrap": "./dist/index.js"
  },
  "scripts": {
    "build": "pkgroll --minify",
    "prepare": "simple-git-hooks",
    "test": "tsx tests/index.spec.ts",
    "start": "tsx src/index.ts"
  },
  "dependencies": {
    "@inquirer/prompts": "^1.2.3",
    "@types/ejs": "^3.1.1",
    "@types/shelljs": "^0.8.11",
    "arg": "^5.0.2",
    "chalk": "^4.0.0",
    "ejs": "^3.1.8",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.15",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "esbuild": "^0.15.16",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^15.0.2",
    "path": "^0.12.7",
    "pkgroll": "^2.0.1",
    "prettier": "^2.8.1",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^3.14.0",
    "typescript": "^4.9.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache"
  },
  "files": [
    "dist",
    "templates"
  ]
}
