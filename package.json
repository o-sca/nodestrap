{
  "name": "@o-sca/nodestrap",
  "version": "1.0.8",
  "description": "bootstrap javascript/typescript project template generator",
  "type": "module",
  "exports": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "bin": {
    "nodestrap": "dist/index.js"
  },
  "scripts": {
    "test": "jest --passWithNoTests",
    "start:dev": "ts-node --esm src/index.ts",
    "start:prod": "node dist",
    "prepublishOnly": "npm run clean && tsc -p .",
    "build:win32": "rmdir /s dist && npm test && tsc -p .",
    "build:darwin": "rm -rf && npm test && tsc",
    "watch": "tsc -w -p ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/o-sca/nodestrap.git"
  },
  "keywords": [],
  "author": "Oscar Yang Guang Zhu <ozhu35@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^1.2.3",
    "arg": "^5.0.2",
    "chalk": "^5.2.0",
    "ejs": "^3.1.8",
    "ora": "^6.3.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/ejs": "^3.1.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.15",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "chai": "^4.3.7",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.15.16",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "mocha": "^10.2.0",
    "path": "^0.12.7",
    "prettier": "^2.8.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  },
  "files": [
    "dist",
    "templates"
  ]
}
