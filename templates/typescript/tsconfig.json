{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "rootDir": "src",
    "outDir": "dist/",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
